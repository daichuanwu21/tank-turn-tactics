{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node build/index.js",
    "start:watch": "nodemon --watch src -e ts --exec \"npm run build && npm run start\"",
    "clean": "rimraf build",
    "build:release": "npm run clean && tsc -p tsconfig.release.json"
  },
  "devDependencies": {
    "@types/node": "^18.16.18",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  }
}
