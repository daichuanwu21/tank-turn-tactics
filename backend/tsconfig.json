{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],

    "module": "node16",
    "rootDir": "./src",
    "moduleResolution": "node16",

    "sourceMap": true,
    "outDir": "build",

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipDefaultLibCheck": false,
    "skipLibCheck": false
  },
  "include": ["src/**/*"]
}
